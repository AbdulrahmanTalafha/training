<odoo>
  <data>
  

  
    <!-- explicit list view definition -->

    <record id="school_tree" model="ir.ui.view">
      <field name="name">school.tree</field>
      <field name="model">school</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="gender"/>
        </tree>
      </field>
    </record>

    
<record id="action_school_root" model="ir.actions.act_window">
    <field name="name">School</field>
    <field name="res_model">school</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
          Click to Create a New.
      </p>
    </field>
    </record>

    <menuitem id="test_school_root"
      web_icon="school,static/src/images/tst2.png"
      name="First" sequence="20"
      action="action_school_root"
      />  
  </data>
</odoo>